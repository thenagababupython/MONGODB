<!-- Complaints Form -->
<section class="p-3">
    <div class="container">
        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="card">
                    <div class="card-header bg-danger text-white text-center">
                        <h3>Raise Complaints</h3>
                    </div>
                    <div class="card-body bg-light">
                        <form action="/complain" method="post">
                            <div class="form-group">
                                <input required name="username" type="text" class="form-control" placeholder="Your Name">
                            </div>
                            <div class="form-group">
                                <input required name="account" type="number" class="form-control" placeholder="Your Account Number">
                            </div>
                            <div class="form-group">
                                <input required name="email" type="email" class="form-control" placeholder="Your Email">
                            </div>
                            <div class="form-group">
                                <select required name="issue" class="form-control">
                                    <option value="">Select Your Issue</option>
                                    <option value="Payment Issue">Payment Issue</option>
                                    <option value="Slow Internet">Slow Internet</option>
                                    <option value="Relocation Request">Relocation Request</option>
                                    <option value="Router Issue">Router Issue</option>
                                    <option value="Other Issue">Other Issue</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <textarea required name="description"  rows="4" class="form-control" ></textarea>
                            </div>
                            <div class="text-center">
                                <input type="submit" value="Raise Complaint" class="btn btn-danger">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

